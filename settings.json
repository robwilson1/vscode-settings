{
  "workbench.colorTheme": "Ros√© Pine Moon",
  "editor.fontSize": 14,
  "workbench.settings.applyToAllProfiles": ["editor.fontSize"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.fontFamily": "'Dank Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.rulers": [80],
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false
  },
  "editor.renderWhitespace": "none",
  "files.defaultLanguage": "{activeEditorLanguage}",
  "javascript.validate.enable": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editorAssociations": {
    "*.md": "vscode.markdown.preview.editor"
  },
  "breadcrumbs.enabled": true,
  "grunt.autoDetect": "off",
  "gulp.autoDetect": "off",
  "npm.runSilent": true,
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnPaste": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "php.suggest.basic": false,
  "window.zoomLevel": 1,
  "editor.linkedEditing": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "variable", // This targets variables
          "variable.other" // This is a more specific scope for variables
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": [
          "variable.object", // This targets object names like `ReactDOM`
          "variable.class" // This targets class names
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": [
          "entity.name.function", // This targets function names
          "support.function", // This also targets functions that are part of a library
          "keyword.operator" // This will target operators
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  }
}
